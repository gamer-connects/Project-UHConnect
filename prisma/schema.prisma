generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("UHCDB_POSTGRES_PRISMA_URL")
  directUrl = env("UHCDB_POSTGRES_URL_NON_POOLING")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  role            Role     @default(USER)
  bio             String?
  createdAt       DateTime @default(now())
  followers       Int      @default(0)
  following       Int      @default(0)
  gameTags        String[]
  profileImage    String?  @default("/profile.png")
  updatedAt       DateTime @updatedAt
  username        String   @unique
  gameInterestIds Int[]
  posts           Post[]
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model EventRequest {
  id               Int           @id @default(autoincrement())
  userId           Int
  userEmail        String
  username         String
  eventName        String
  eventType        String
  gameTitle        String
  description      String
  suggestedDate    DateTime?
  suggestedTime    String?
  estimatedPlayers Int?
  location         String?
  additionalNotes  String?
  eventPoster      String?       // Base64 encoded image or URL
  status           RequestStatus @default(UNOPENED)  // Changed from PENDING to UNOPENED
  adminNotes       String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Game {
  id          Int      @id @default(autoincrement())
  description String?
  createdAt   DateTime @default(now())
  image       String
  title       String
  type        String
  posts       Post[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime
  description String
  createdAt   DateTime @default(now())
  flyer       String
  location    String
  type        String
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  tags      String[]
  userID    Int
  gameID    Int
  createdAt DateTime @default(now())
  game      Game     @relation(fields: [gameID], references: [id])
  user      User     @relation(fields: [userID], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum RequestStatus {
  UNOPENED     // New requests admins haven't viewed yet
  PENDING      // Admin has opened it, reviewing
  APPROVED     // Approved but not posted yet
  REJECTED     // Denied
  LIVE         // Event is approved and posted
  CLOSED       // Event has passed
  IN_REVIEW    // Keep this if you want it
}
