generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("UHCDB_POSTGRES_PRISMA_URL")
  directUrl = env("UHCDB_POSTGRES_URL_NON_POOLING")
}

model User {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  password        String
  role            Role     @default(USER)
  bio             String?
  createdAt       DateTime @default(now())
  followers       Int      @default(0)
  following       Int      @default(0)
  gameTags        String[]
  profileImage    String?  @default("/profile.png")
  updatedAt       DateTime @updatedAt
  username        String   @unique
  gameInterestIds Int[]
  posts           Post[]

  // Relations
  followersRel   Follow[] @relation("UserFollowers")
  followingRel   Follow[] @relation("UserFollowing")
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model EventRequest {
  id               Int           @id @default(autoincrement())
  userId           Int
  userEmail        String
  username         String
  eventName        String
  eventType        String
  gameTitle        String
  description      String
  suggestedDate    DateTime?
  suggestedTime    String?
  estimatedPlayers Int?
  location         String?
  additionalNotes  String?
  eventPoster      String?
  status           RequestStatus @default(PENDING)
  adminNotes       String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

model Game {
  id          Int      @id @default(autoincrement())
  description String?
  createdAt   DateTime @default(now())
  image       String
  title       String
  type        String
  posts       Post[]
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime
  description String
  createdAt   DateTime @default(now())
  flyer       String
  location    String
  type        String
}

model Post {
  id        Int      @id @default(autoincrement())
  content   String
  tags      String[]
  userID    Int
  gameID    Int
  createdAt DateTime @default(now())
  game      Game     @relation(fields: [gameID], references: [id])
  user      User     @relation(fields: [userID], references: [id])
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  IN_REVIEW
}

model Follow {
  id          Int      @id @default(autoincrement())
  followerId  Int
  followingId Int
  createdAt   DateTime @default(now())

  follower    User @relation("UserFollowers", fields: [followerId], references: [id], onDelete: Cascade)
  following   User @relation("UserFollowing", fields: [followingId], references: [id], onDelete: Cascade)

  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}