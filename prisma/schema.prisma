// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  username      String   @unique
  role          Role     @default(USER)
  bio           String?
  profileImage  String?  @default("/profile.png")
  followers     Int      @default(0)
  following     Int      @default(0)
  gameInterests String[] // e.g. ["Valorant", "Elden Ring"]
  gameTags      String[] // e.g. ["FPS", "Co-op", "Competitive"]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String    // You might want to make this User @relation later
}

model EventRequest {
  id               Int           @id @default(autoincrement())
  userId           Int
  userEmail        String
  username         String
  eventName        String
  eventType        String
  gameTitle        String
  description      String
  suggestedDate    DateTime?
  suggestedTime    String?
  estimatedPlayers Int?
  location         String?
  additionalNotes  String?
  eventPoster      String?       // Base64 encoded image or URL
  status           RequestStatus @default(PENDING)
  adminNotes       String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  IN_REVIEW
}

model Game {
  id          Int      @id @default(autoincrement())
  title       String
  type        String
  image       String
  description String?
  createdAt   DateTime @default(now())
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  date        DateTime
  location    String
  description String
  flyer       String
  type        String
  createdAt   DateTime @default(now())
}
