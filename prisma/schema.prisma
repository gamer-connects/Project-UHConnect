generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("UHCDB_POSTGRES_PRISMA_URL")
  directUrl = env("UHCDB_POSTGRES_URL_NON_POOLING")
}

model User {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  password      String
  role          Role     @default(USER)
  bio           String?
  createdAt     DateTime @default(now())
  followers     Int      @default(0)
  following     Int      @default(0)
  gameInterests String[]
  gameTags      String[]
  profileImage  String?  @default("/profile.png")
  updatedAt     DateTime
  username      String   @unique
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model EventRequest {
  id               Int           @id @default(autoincrement())
  userId           Int
  userEmail        String
  username         String
  eventName        String
  eventType        String
  gameTitle        String
  description      String
  suggestedDate    DateTime?
  suggestedTime    String?
  estimatedPlayers Int?
  location         String?
  additionalNotes  String?
  status           RequestStatus @default(PENDING)
  adminNotes       String?
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  IN_REVIEW
}
